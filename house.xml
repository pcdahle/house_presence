<?xml version="1.0"?>
<fsm>
    <constants>
        T_EXP_WAKEUP=15
    </constants>
    <statemachine name="Masthuggstorget">
        <init state="Home"/>
        <state name="Home">
            <init state="Special"/>
            <state name="Default">
                <state name="Night">
                    <entry>
                        <lamp>
                            <idx>22</idx>
                            <set>off</set>
                        </lamp>
                    </entry>
                    <tr to="Day">
                        <sunrise>+01:00</sunrise>
                    </tr>
                    <tr to="Wakeup">
                        <button>25</button>
                    </tr>
                    <tr to="NightWalk">
                    </tr>
                </state>
                <state name="NightWalk">
                    <entry>
                    </entry>
                    <tr to="Night">
                    </tr>
                </state>
                <state name="Wakeup">
                    <entry>
                    </entry>
                    <tr to="Morning">
                    </tr>
                </state>
                <state name="Morning">
                    <entry>
                    </entry>
                    <tr to="Day">
                    </tr>
                </state>
                <state name="Day">
                    <entry>
                    </entry>
                    <tr to="Evening">
                    </tr>            
                </state>
                <state name="Evening">
                    <entry>
                    </entry>
                    <tr to="Bedtime"/>
                    <tr to="Night"/>
                </state>
                <state name="Bedtime">
                    <entry>
                    </entry>
                    <tr to="Night">
                    </tr>            
                </state>
            </state>
            <state name="Special">
                <init state="Arrive"/>
                <state name="Arrive">
                    <entry>
                    </entry>
                    <tr to="../Default">
                    </tr>            
                </state>
                <state name="TV">
                    <entry>
                    </entry>
                    <tr to="../Default">
                    </tr>            
                </state>
                <state name="Dinner">
                    <entry>
                    </entry>
                    <tr to="../Default">
                    </tr>            
                </state>
                <state name="Work">
                    <entry>
                    </entry>
                    <tr to="../Default">
                    </tr>            
                </state>
            </state>
            <tr to="Out">
            </tr>      
        </state>
        <state name="Out">
            <state name="Night">
                    <entry>
                    </entry>
                    <tr to="Day">
                    </tr>        
            </state>
            <state name="Day">
                    <entry>
                    </entry>
                    <tr to="Night">
                    </tr>        
            </state>
        </state>
    </statemachine>
</fsm>

